{% extends 'site-layout.html.twig' %}

{% block title %}Login{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <style>
        html,
        body {
            height: 100%;
        }

        body {
            display: flex;
            align-items: center;
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 330px;
            padding: 15px;
        }

        .form-signin .form-floating:focus-within {
            z-index: 2;
        }

        .form-signin input[type="email"] {
            margin-bottom: -1px;
            border-bottom-right-radius: 0;
            border-bottom-left-radius: 0;
        }

        .form-signin input[type="password"] {
            margin-bottom: 10px;
            border-top-left-radius: 0;
            border-top-right-radius: 0;
        }
    </style>
{% endblock %}


{% block body %}
<main class="form-signin w-100 m-auto">
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('web_login') }}" method="post">
        <img class="mb-4" src="/images/site/logo.png" alt="Logo">
        <h1 class="h3 mb-3 fw-normal">Login</h1>

        <div class="form-floating">
            <input type="email" class="form-control" id="username" name="_username" value="{{ last_username }}"/>
            <label for="username">Email</label>
        </div>

        <div class="form-floating">
            <input type="password" class="form-control" id="password" name="_password"/>
            <label for="password">Password</label>

        </div>

        {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"/> #}

        {# Abilita la funzione 'remember me' da configurare nel firewall
        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" value="remember-me"> Remember me
            </label>
        </div> #}

        <button class="w-100 btn btn-lg btn-primary" type="submit">login</button>
    </form>
</main>
{% endblock %}

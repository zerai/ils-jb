{% extends 'admin-layout.html.twig' %}

{% block title %}Offerte di lavoro{% endblock %}

{% block main %}
<main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
    <div>
        <h1 class="text-center">JobPost</h1>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                </tr>
                </thead>
                <tbody>
                {% for jobpost in jobposts  %}
                    <tr>
                        <td>#</td>
                        <td>{{ jobpost.id }}</td>
                        <td>{{ jobpost.title }}</td>
                        <td>{{ jobpost.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</main>
{% endblock %}

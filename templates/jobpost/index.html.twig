{% extends 'site-layout.html.twig' %}

{% block title %}Offerte di lavoro{% endblock %}

{% block main %}
<main>
    <div>
        <h1 class="text-center">Offerte di lavoro</h1>

        <div class="table-responsive">
            <table class="table table-striped table-sm">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Id</th>
                    <th scope="col">Title</th>
                    <th scope="col">Description</th>
                </tr>
                </thead>
                <tbody>
                {% for jobpost in pager  %}
                    <tr>
                        <td>#</td>
                        <td>{{ jobpost.id }}</td>
                        <td>{{ jobpost.title }}</td>
                        <td>{{ jobpost.description }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            {{ pagerfanta(pager) }}
        </div>
    </div>
</main>
{% endblock %}
